<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivPortada"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="15dp"
        android:src="@drawable/portadaLibroDefault" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ISBN :"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/tvIsbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="codigo"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor :"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/tvAutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="autor"
            android:textSize="15sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Libros disponibles :"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/tvLibrosDisponibles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n libros"
            android:textSize="15sp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/tvProximoDisponible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(fecha próximo libro)"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Libros existentes :"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/tvLibrosExistentes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n libros"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <Button
            android:id="@+id/btnReservar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservar"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/btnDevolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Devolver"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

</LinearLayout>